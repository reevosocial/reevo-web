server {
    #listen       127.0.0.1:3000;
    server_name  equipo.devreevo.org;

	access_log  /srv/dev/log/nginx-equipo.access.log;
	error_log  /srv/dev/log/nginx-equipo.error.log debug;

	client_max_body_size 100M;

	location / {
	    proxy_set_header X-Reak-IP $remote_addr;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    proxy_set_header Host $http_host;
	    proxy_redirect off;

	    if (-f $request_filename/index.html) {
	      rewrite (.*) $1/index.html break;
	    }

	    if (-f $request_filename.html) {
	      rewrite (.*) $1.html break;
	    }

	    if (!-f $request_filename) {
	      proxy_pass http://unix:/srv/dev/www/equipo/tmp/sockets/redmine.socket;
	      break;
	    }
	}
}

