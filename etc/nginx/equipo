server {
  server_name  equipo.$REEVO_HOSTNAME;

	access_log  /srv/reevo-web/log/nginx-equipo.access.log;
	error_log  /srv/reevo-web/log/nginx-equipo.error.log debug;

	client_max_body_size 100M;

  root  /srv/reevo-web/www/equipo/public/;

	location / {
	  proxy_set_header X-Reak-IP $remote_addr;
	  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	  proxy_set_header Host $http_host;
	  proxy_redirect off;

	  if (-f $request_filename/index.html) {
	    rewrite (.*) $1/index.html break;
	  }

	  if (-f $request_filename.html) {
	    rewrite (.*) $1.html break;
	  }

	  if ($maintenance) {
	      return 503;
	  }

	  if (!-f $request_filename) {
	    proxy_pass http://unix:/srv/reevo-web/www/equipo/tmp/sockets/redmine.socket;
	    break;
	  }

	}

	# Sitio offline
  error_page 503 @maintenance;
  location @maintenance {
      rewrite ^(.*)$ /errors/503/index.html break;
  }

}

